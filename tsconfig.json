{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "hooks": [
        "./lib/hooks"
      ],
      "utils/*": [
        "./lib/utils/*"
      ],
      "types/*": [
        "./lib/types/*"
      ],
      "generalClasses.module.scss": [
        "./lib/style/generalClasses"
      ],
      "static/*": [
        "./lib/static/*"
      ],
      "context/*": [
        "./lib/context/*"
      ],
      "style/*": [
        "./lib/style/*"
      ]
    }
  },
  "include": ["src", "lib"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
